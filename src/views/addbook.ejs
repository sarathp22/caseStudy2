      <div class="row">
        <div class="col-sm-12">
          <div style="height: 60px;"> </div>
        </div>
      </div> 
    </div>
  </div>
  


    <div class="container-fluid jumbotron mb-0 flex-column" >
          <div style="background-color: white;margin-top: -95px;margin-left: 25px;margin-right:25px;background-image: url(flower.jpg);">
             
            <div style="height: 75px;"></div>
            <div  class="container">
              <div class="row">
                <div class="col-md-4"></div>
              <div id="login" class="col-md-4">
            
                <h1 id="h1sign">Add Book</h1>
                    <form action="/addbook/add" method="POST" enctype="multipart/form-data" onsubmit="return validateBook()">
                  <table style="margin:auto;padding:50px;">
                  <tr><td><input type="text" name="title" id="title" placeholder="Title of the book"></td></tr>
                  <tr><td><div class="val" id="tit"></div></td></tr>
                  <tr><td><input type="text" name="author" id="author" placeholder="Author name"></td></tr>
                  <tr><td><div class="val" id="aut"></div></td></tr>

                  <tr><td><input type="text" name="genre" id="genre" placeholder="Book Genre"></td></tr>
                  <tr><td><div class="val" id="gen"></div></td></tr>

                  <tr><td><input type="file" name="image" id="file" placeholder="Upload author image"></td></tr>
                  <tr><td><div class="val" id="fil"></div></td></tr>

                  
                  <tr><td><button type="submit" style="background-color:crimson;color:white;float: right; " class="btn m-3"> ADD BOOK </button></td></tr>
                  
                </table>
                </form>



              </div>

                <div class="col-md-4"></div>

              </div>
                </div>
            
               


                
                <div style="height: 75px;"></div>
        </div>
            
            <h2 style="margin-top: 75px;">Follow Us</h2>
            <div class="btn-group" style="width: 250px;">
              <button class="btn btn-primary" type="button" >Twitter</button>
              <button class="btn btn-info btnfacebook" type="button" >Facebook</button>
              <button class="btn btn-danger btnplus" type="button" >Google+</button>
            </div>
    </div>
      
      
          
