            <a class="nav-link text-white" href="<%=nav[i].link%>"><%=nav[i].title%></a>
          </li>
          <%}%>
      </ul>
      
    </div>
  </nav>
      
  <div class="back m-0" style="border-radius: 0px;min-height: 200px;">
    <div class="row p-2">
    
      <div class="col-md-7">
        <h1 class="h1style text-white display-3 mt-5 ml-5">Library</h1>
      </div>
      
      <div class="col-md-5">
        <div class="header mt-5 mb-2" style=" min-height: 90px;margin-right: 50px;margin-left: 50px;">
          <div class="row">
            <div class="col-sm-12">
              <div style="height: 40px;"> </div>
            </div>
          </div>
        </div>
      </div>
